{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES5",
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES6", "WebWorker", "ScriptHost", "DOM"]
  },
  "include": ["./src/**/*"]
}
